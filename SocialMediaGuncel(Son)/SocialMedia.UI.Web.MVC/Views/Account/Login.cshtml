@{
    Layout = null;
}

@using SocialMedia.UI.Web.MVC.Models
@model LoginVM

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View1</title>
    <link href="~/Content/public/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/public/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/public/js/bootstrap.min.js"></script>
</head>
<body>

    @if (ViewBag.IsSuccess != null)
    {
        if (ViewBag.IsSuccess)
        {
            <label class="alert alert-success" style="display:block">@ViewBag.Message</label>
        }
        else
        {
            <label class="alert alert-danger" style="display:block">@ViewBag.Message</label>
        }
    }




    <div>
        @Html.ValidationSummary(false)
    </div>


    <div style="margin-top:10%;" class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Giriş Ekranı
            </div>
            <div class="panel-body">


                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-group-sm" }))
                {
                    @Html.AntiForgeryToken();<br />
                    @Html.TextBoxFor(x => x.Email, new { @placeholder = "E-Posta", @class = "form-control" });<br />
                    @Html.TextBoxFor(x => x.Password, new { @type = "Password", @placeholder = "Password", @class = "form-control" });<br />
                    <div class="checkbox-inline">
                        @Html.CheckBoxFor(x => x.RememberMe) Beni hatırla!
                    </div>
                    <br />
                    <hr />

                    <input class="btn btn-primary pull-left" type="submit" name="name" value="Oturum aç" />
                    <a class="pull-right" href="/Account/ForgetPassword">Parolamı Unuttum ?</a>
                }







