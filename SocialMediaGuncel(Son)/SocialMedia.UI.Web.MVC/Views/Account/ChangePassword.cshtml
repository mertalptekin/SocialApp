
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangePassword</title>
    <link href="~/Content/public/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/public/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/public/js/bootstrap.min.js"></script>
</head>
<body>
    <div style="margin-top:20px;" class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <form class="form-group" action="" method="post">
                <div class="panel-heading">
                    Parolamı değiştir
                </div>
                <div class="panel-body">
                    <input type="hidden" name="Email" value="@ViewBag.Email" />
                    <input class="form-control" type="password" name="Password" placeholder="Yeni parolanız" value="" />
                    <br />
                    <input class="form-control" type="password" name="ConfirmPassword" placeholder="Parola Tekrar" value=" " />
                    <br />
                    <input class="btn btn-default pull-left" type="submit" name="name" value="Yolla" />
                    <a class="pull-right" href="/Account/Login">Oturum Aç</a>
                </div>
            </form>

        </div>
    </div>
</body>
</html>
