@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View1</title>
    <link href="~/Content/public/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/public/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/public/js/bootstrap.min.js"></script>
</head>
<body>

    @if (ViewBag.IsSuccess != null)
    {
        if (ViewBag.IsSuccess)
        {
            <label class="alert alert-success" style="display:block">@ViewBag.Message</label>
        }
        else
        {
            <label class="alert alert-danger" style="display:block">@ViewBag.Message</label>
        }
    }




    <div>
        @Html.ValidationSummary(false)
    </div>


    <div style="margin-top:10%;" class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Kayıt Ol Ekranı
            </div>
            <div class="panel-body">
                <form novalidate class="form-group" action="/Account/Register" method="post">
                    @Html.AntiForgeryToken()
                    <input class="form-control" type="text" name="UserName" placeholder="Kullanıcı Adı" value="" />
                    <br />
                    <input class="form-control" type="email" placeholder="E-Posta" name="Email" value="" />
                    <br />

                    <input class="form-control" type="password" placeholder="Parola" name="Password" value="" />
                    <br />
                    <input class="form-control" type="password" placeholder="Parola Tekrar" name="ConfirmPassword" value="" />
                    <br />

                    <div class="checkbox-inline">
                        <input type="checkbox" name="RememberMe" value="" />Beni Hatırla !
                    </div>
                    <br />
                    <hr />
                    <input class="btn btn-primary pull-left" type="submit" name="name" value="Kayıt Ol" />
                    <a href="/Account/Login" class="btn btn-default pull-right">Girş Ekranı</a>
                </form>
            </div>
            <div class="panel-footer">
                <p class="text-center">BaseBook &copy;</p>
            </div>
        </div>
    </div>
</body>
</html>
